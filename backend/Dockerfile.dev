FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better layer caching
COPY requirements.txt requirements-dev.txt ./

# Upgrade pip and install all dependencies including dev/test
RUN pip install --upgrade pip setuptools wheel \
    && pip install --no-cache-dir -r requirements-dev.txt

# Application code is mounted as a volume in docker-compose for hot reloading.
# The COPY below ensures the image works standalone too (e.g. docker build + run).
COPY . .

# Expose the default FastAPI port
EXPOSE 8000

# Development command: --reload watches for code changes via the volume mount
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
